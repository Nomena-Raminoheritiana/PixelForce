<div class="row">
    <div class="col-md-6 col-12">
        {{ form_row(formUser.nom, { attr: { placeholder : "Nom de l'utilisateur"  }}) }}
    </div>
    <div class="col-md-6 col-12">
        {{ form_row(formUser.prenom, { attr: { placeholder : "Prénom de l'utilisateur" } }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-12">
        {{ form_row(formUser.email, { attr: { placeholder : "Email de l'utilisateur"  }, type : "email" }) }}
    </div>
    <div class="col-md-6 col-12">
        {{ form_row(formUser.telephone, { attr: { placeholder : "Téléphone de l'utilisateur" } }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-12">
        {{ form_row(formUser.adresse, { attr: { placeholder : "Adresse de l'utilisateur" } }) }}
    </div>
    <div class="col-md-6 col-12">
        {{ form_row(formUser.codePostal, { attr: { placeholder : "Code postal de l'utilisateur" } }) }}
    </div>
</div>

<!-- Secteur -->
{% if formUser.secteur is defined %}
<h5 class="mt-4">Choix du secteur</h5>
<h6 class="mt-4">( Pour le moment, on choisi le secteur manuellement car le coach n'est pas rattaché à un secteur)</h6>

<div class="row my-3">
    {% for secteurList in formUser.secteur.children.secteur.children %}
        <div class="col-12 col-md-4">
            {{ form_row(secteurList) }}
        </div>

    {% endfor %}
</div>
{% endif %}

<!-- Connection Information -->
{% if formUser.password is defined %}
{{ form_row(formUser.username, { attr: { placeholder : "Nom ou prénom de l'utilisateur" } }) }}
{{ form_row(formUser.password) }}
{% endif %}