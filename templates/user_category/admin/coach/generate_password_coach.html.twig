{% extends 'base_admin.html.twig' %}

{% block title %}
	Génération mot de passe coach
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
	<style>
		.form-add-coach{
			padding: 0 100px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container my-5">
	    <!-- Message alert -->
        <div class="alert-messager">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

	    <!-- Formulaire -->
		<div class="content-body-form">
			<a href="{{ path('admin_coach_list') }}" class="btn btn-secondary"> <i class="fa-solid fa-circle-arrow-left"></i> Retour </a>
			<h1 class="text-center fw-bold">2- Mot de passe</h1>
			<div class="form-add-coach">
				{{ include ('global/user_form/_user_password_form.html.twig', {btn_class : 'btn-primary'}) }}
			</div>
		</div>
	</div>
{% endblock %}
