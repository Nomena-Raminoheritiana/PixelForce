{% extends 'base_admin.html.twig' %}

{% block title %}
	Liste des coachs
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
    <div class="container mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        <!-- Formulaire de recherche -->
        <div class="search-form">
            {{form_start(searchForm)}}
            <div class="row text-center">
                <div class="col-12 text-end">
                    {{form_row(searchForm.active)}}
                </div>
                <div class="col-12 col-sm-3 col-md-3">
                    {{form_row(searchForm.prenom)}}
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    {{form_row(searchForm.email)}}
                </div>
				<div class="col-12 col-sm-3 col-md-3">
                    {{form_row(searchForm.telephone)}}
                </div>
                <div class="col-12 col-sm-4 col-md-3">
                    {{form_row(searchForm.secteur)}}
                </div>
                <div class="col-6">
                    {{form_row(searchForm.dateInscriptionMin)}}
                </div>
                <div class="col-6">
                    {{form_row(searchForm.dateInscriptionMax)}}
                </div>
                <div class="col-12 col-sm-12 col-md-12 mt-3">
                    <button class="btn btn-primary "><i class="fa-solid fa-magnifying-glass"></i> Rechercher</button>
                </div>
            </div>
            {{form_end(searchForm)}}
        </div>

        <hr class="my-5">

        <!-- Liste coach -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
                    <div class="row h-100">
                        <div class="col-6">
                            <h4 class="my-auto">Liste des coachs</h4>
                        </div>
                        <div class="col-6 ">
                            <a href="{{ path('admin_coach_add') }}" class="btn btn-primary btn-sm waves-effect waves-float waves-light fw-bolder d-flex float-end d-flex align-items-center"><i class="fa-solid fa-user-plus me-2"></i> Ajouter</a>
                        </div>
                    </div>
                </div>
            </div>
		</div>
        <div class="table-responsive">
			<table class="table table-striped table-hover text-center sortable">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom et prénoms</th>
						<th scope="col">Email</th>
						<th scope="col">Téléphone</th>
						<th scope="col">Date inscription</th>
						<th scope="col">Secteur</th>
						<th scope="col">Etat</th>
						<th scope="col" class="table-th-notSortable">ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for coach in coachs %}
                        <tr>
                            <td>{{ coach.id }}</td>
                            <td>{{ coach.fullName }}</td>
                            <td>{{ coach.email }}</td>
                            <td>{{ coach.telephone|default('-') }}</td>
                            <td>{{ coach.createdAt|date('d/m/Y') }}</td>
                            <td>
                                {# On récupère les secteurs reliés par l'agent  #}
                                {% set secteurs = repoCoachSecteur.findBy({'coach' : coach}) %}
                                {{ coach.allSecteursOfUser(secteurs)|default('-') }}     
                            </td>
                            <td>
                                <div class="m-auto {{ coach.active == 1 ? 'bg-success' : (coach.active == -1 ? 'bg-danger' : 'bg-primary') }} rounded-circle caret"><span class="d-none">{{  coach.active }}</span></div>
                            </td>
                            <td >
                                <a href="{{ path('admin_coach_edit', {'id': coach.id}) }}" class="btn btn-success d-none">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {% set chatCanal =  render(controller(
                                    'App\\Controller\\ChatController::getSingleCanalBy_idUser',
                                    {
                                        id: coach.id
                                    }
                                    ))
                                %}

                                <a href="#" class="btn btn-primary chat-choose-canal" data-canal="{{ chatCanal|url_encode }}">
                                    <i class="fa-brands fa-facebook-messenger"></i>
                                </a>
                                <a href="{{ path('admin_coach_view', {'id': coach.id}) }}" class="btn btn-secondary">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <form method="post" action="{{path('admin_coach_delete', {id: coach.id})}}" style="display: inline-block;" onsubmit="return confirm('Êtes vous vraiment sûr de supprimer ce coach ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coach.id) }}">
                                    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </form>  
                            </td>
                        </tr>
						
					{% endfor %}

				</tbody>
			</table>
		</div>

		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(coachs)}}
		</div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
