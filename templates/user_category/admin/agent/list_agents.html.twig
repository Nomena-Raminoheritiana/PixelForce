{% extends 'base_admin.html.twig' %}

{% block title %}
	Liste des agents
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
    <div class="container mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        <!-- Formulaire de recherche -->
        <div class="search-form">
            {{form_start(searchForm)}}
            <div class="row text-center">
                <div class="col-12 col-sm-6 col-md-3">
                    {{form_row(searchForm.prenom)}}
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    {{form_row(searchForm.email)}}
                </div>
				<div class="col-12 col-sm-6 col-md-3">
                    {{form_row(searchForm.telephone)}}
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    <button class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>
            {{form_end(searchForm)}}
        </div>

        <!-- Liste agent -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class=" w-100 h-100 ps-3 py-3  bg-white border pe-3">
                    <div class="row h-100">
                        <div class="col-6">
                            <h4 class="my-auto">Liste des agents</h4>
                        </div>
                    </div>
                </div>
            </div>
		</div>
        <div class="table-responsive">
			<table class="table table-striped table-hover text-center">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom et prénoms</th>
						<th scope="col">Mail</th>
						<th scope="col">Date inscription</th>
						<th scope="col">Secteur</th>
						<th scope="col">ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for agent in agents %}
                        <tr>
                            <td>{{ agent.id }}</td>
                            <td>{{ agent.fullName }}</td>
                            <td>{{ agent.email }}</td>
                            <td>{{ agent.createdAt|date('d/m/Y') }}</td>
                            <td> 
                                {# On récupère les secteurs reliés par l'agent  #}
                                {% set secteurs = repoUserSecteur.findBy({'user' : agent}) %}
                                {{ agent.allSecteursOfAgent(secteurs)|default('-') }}                                
                            </td>
                            <td >
                                <a href="{{ path('admin_agent_edit', {'id': agent.id}) }}" class="btn btn-success">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="{{ path('admin_agent_view', {'id': agent.id}) }}" class="btn btn-secondary">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <form method="post" action="{{path('admin_agent_delete', {id: agent.id})}}" style="display: inline-block;" onsubmit="return confirm('Êtes vous vraiment sûr de supprimer cet agent ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.id) }}">
                                    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </form>  
                            </td>
                        </tr>
						
					{% endfor %}

				</tbody>
			</table>
		</div>

		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(agents)}}
		</div>
    </div>
{% endblock %}
