{% extends 'base.html.twig' %}

{% block title %}
	Commande
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<!-- BEGIN: Content-->
    <div class="app-content content client ecommerce-application">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper container-xxl p-0">
            <div class="content-header row">
                <div class="content-header-left col-md-9 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <h2 class="content-header-title float-start mb-0">Commande</h2>
                            <div class="breadcrumb-wrapper">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Home</a>
                                    </li>
                                    <li class="breadcrumb-item"><a href="#">eCommerce</a>
                                    </li>
                                    <li class="breadcrumb-item active">Commande
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <div class="bs-stepper checkout-tab-steps">
                    <div class="bs-stepper-content">
                        <div class="content client active dstepper-block" role="tabpanel" >
                        
                            <div id="place-order" class="list-view product-checkout">
                            <div class="checkout-items">
                                <div class="card ecommerce-card">
                                    <div class="item-img">
                                        <a href="#">
                                            <img src="{{ asset( filesDirectory ~ order.produit.photo) }}" alt="Image pour {{order.produit.nom}}" />
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <div class="item-name">
                                            <h6 class="mb-0"><a href="#" class="text-body">{{order.produit.nom}}</a></h6>
                                            <span class="delivery-date text-muted"><i><b>Description :</b></i> {{order.produit.description|raw}}</span>
                                        </div>
                                        {# <span class="text-success mb-1">En stock</span> #}
                                        <div class="item-quantity">
                                            {# <span class="quantity-title">Quantité:</span>
                                            <div class="input-group quantity-counter-wrapper bootstrap-touchspin">
                                                <span class="input-group-btn input-group-prepend bootstrap-touchspin-injected">{{accomp.qty}}</span>
                                            </div> #}
                                        </div>
                                        {# <span class="delivery-date text-muted">Delivery by, Wed Apr 25</span> #}
                                        {# <span class="text-success">Remise de 20%</span> #}
                                    </div>
                                    <div class="item-options text-center">
                                        <div class="item-wrapper">
                                            <div class="item-cost">
                                                {# <h4 class="item-price" >{{(accomp.prix * accomp.qte) | number_format(2, ',', ' ')}} €</h4> #}
                                                {# <p class="card-text shipping">
                                                    <span class="badge rounded-pill badge-light-success">Free Shipping</span>
                                                </p> #}
                                            </div>
                                        </div>
                                        {# <button type="button" class="btn btn-light mt-1 remove-wishlist" onclick="removeBasketItem({{basketItem.produit.id}})">
                                            <i data-feather="x" class="align-middle me-25"></i>
                                            <span>Retirer du panier</span>
                                        </button>
                                        <button type="button" class="btn btn-primary btn-cart move-cart" onclick="updateBasketItem({{basketItem.produit.id}})">
                                            <i data-feather="shopping-cart" class="align-middle me-25"></i>
                                            <span class="text-truncate">Modifier le panier</span>
                                        </button> #}
                                    </div>
                                </div>
                                <h3>Accompagnements</h3>
                                {% for accomp in order.accomps %}
                                <div class="card ecommerce-card">
                                    <div class="item-img">
                                        <a href="#">
                                            <img src="{{ asset( filesDirectory ~ accomp.produit.photo) }}" alt="Image pour {{accomp.produit.nom}}" />
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <div class="item-name">
                                            <h6 class="mb-0"><a href="#" class="text-body">{{accomp.produit.nom}}</a></h6>
                                            <span class="delivery-date text-muted"><i><b>Description :</b></i> {{accomp.produit.description|raw}}</span>
                                        </div>
                                        {# <span class="text-success mb-1">En stock</span> #}
                                        <div class="item-quantity">
                                            <span class="quantity-title">Quantité:</span>
                                            <div class="input-group quantity-counter-wrapper bootstrap-touchspin">
                                                <span class="input-group-btn input-group-prepend bootstrap-touchspin-injected">{{accomp.qte}}</span>
                                            </div>
                                        </div>
                                        {# <span class="delivery-date text-muted">Delivery by, Wed Apr 25</span> #}
                                        {# <span class="text-success">Remise de 20%</span> #}
                                    </div>
                                    <div class="item-options text-center">
                                        <div class="item-wrapper">
                                            <div class="item-cost">
                                                <h4 class="item-price" >{{(accomp.prix * accomp.qte) | number_format(2, ',', ' ')}} €</h4>
                                                {# <p class="card-text shipping">
                                                    <span class="badge rounded-pill badge-light-success">Free Shipping</span>
                                                </p> #}
                                            </div>
                                        </div>
                                        {# <button type="button" class="btn btn-light mt-1 remove-wishlist" onclick="removeBasketItem({{basketItem.produit.id}})">
                                            <i data-feather="x" class="align-middle me-25"></i>
                                            <span>Retirer du panier</span>
                                        </button>
                                        <button type="button" class="btn btn-primary btn-cart move-cart" onclick="updateBasketItem({{basketItem.produit.id}})">
                                            <i data-feather="shopping-cart" class="align-middle me-25"></i>
                                            <span class="text-truncate">Modifier le panier</span>
                                        </button> #}
                                    </div>
                                </div>
                                {% endfor %}
                                
                            </div>
                            <!-- Checkout Place Order Left ends -->

                            <!-- Checkout Place Order Right starts -->
                            <div class="checkout-options">
                                <div class="card">
                                    <div class="card-body">
                                        <label class="section-label form-label mb-1">Détails</label>
                                        <hr />
                                        <div class="price-details">
                                            <ul class="list-unstyled">
                                                <li class="price-detail">
                                                    <div class="detail-title">Date</div>
                                                    <div class="detail-amt">{{order.dateCommande | date("d/m/Y H:i")}}</div>
                                                </li>
                                                <li class="price-detail">
                                                    <div class="detail-title">Statut</div>
                                                    <div class="detail-amt discount-amt text-primary">{{order.statusStr}}</div>
                                                </li>
                                                <li class="price-detail">
                                                    <div class="detail-title">{{order.typeAbonnement.nom}}</div>
                                                    <div class="detail-amt"></div>
                                                </li>
                                                {# <li class="price-detail">
                                                    <div class="detail-title">{{order.typeInstallation.description}}</div>
                                                    <div class="detail-amt"></div>
                                                </li> #}
                                                <li class="price-detail">
                                                    <div class="detail-title">Prix du produit</div>
                                                    <div class="detail-amt">{{order.prixProduit| number_format(2, ',', ' ')}} €</div>
                                                </li>
                                                <li class="price-detail">
                                                    <div class="detail-title">Montant des accompagnements</div>
                                                    <div class="detail-amt">{{order.accompMontant| number_format(2, ',', ' ')}} €</div>
                                                </li>
                                                {% if order.installationFrais > 0 %}
                                                <li class="price-detail">
                                                    <div class="detail-title">Frais d'installation</div>
                                                    <div class="detail-amt">{{order.installationFrais| number_format(2, ',', ' ')}} €</div>
                                                </li>
                                                {% endif %}

                                                
                                            </ul>
                                            <hr />
                                            <ul class="list-unstyled">
                                                <li class="price-detail">
                                                    <div class="detail-title detail-total">Prix total  :</div>
                                                    <div class="detail-amt fw-bolder" id="total-cost" >{{order.total | number_format(2, ',', ' ')}} €</div>
                                                </li>
                                            </ul>
                                            {% if order.contratSigned %}
                                            <a role="button" class="btn btn-primary w-100 btn-next place-order mt-2" href="{{path('admin_ordersecu_download_contrat', {'id': order.id})}}">Voir le contrat</a>                                            
                                            {% endif %}
                                            {% if order.statut == 1 %}
                                            <a role="button" class="btn btn-success w-100 btn-next place-order mt-2" href="{{path('admin_ordersecu_status', {'id': order.id, 'status': 2})}}">Valider</a>
                                            
                                            <a role="button" class="btn btn-danger w-100 btn-next place-order mt-2" href="{{path('admin_ordersecu_status', {'id': order.id, 'status': -1})}}">Rejeter</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <!-- Checkout Place Order Right ends -->
                            </div>  
                            </div>
                        </div>
                
                    </div>
                </div>    
            </div>
        </div>
    </div>
    <!-- END: Content-->
{% endblock %}



