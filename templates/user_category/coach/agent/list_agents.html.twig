{% extends 'base.html.twig' %}

{% block title %}
	Liste des agents
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}	
    <div class="container mt-3">
        <!-- Message alert -->
        <div class="alert-message">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{label}} text-center">
                    {% for message in messages %}
                        {{message | raw}}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        <!-- Formulaire de recherche -->
        <div class="search-form">
            {{form_start(searchForm)}}
            <div class="row text-center">
                <div class="col-12 col-sm-6 col-md-3">
                    {{form_row(searchForm.prenom)}}
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    {{form_row(searchForm.email)}}
                </div>
				<div class="col-12 col-sm-6 col-md-3">
                    {{form_row(searchForm.telephone)}}
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    <button class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>
            {{form_end(searchForm)}}
        </div>

        <!-- Liste agent -->
        <div class="row mb-3">
            <div class="col-12  mt-2 mt-md-3">
                <div class="row mb-4 mt-3 mt-m-0">
                    <div class="col-12 col-md-6 order-2 order-md-1">
                        <h4><i class="fa fa-book-atlas"></i> Liste des agents</h4>
                    </div>
                    <div class="col-12 col-md-6 text-sm-start text-md-end order-1 order-md-1 mb-3 mb-md-0">
                        <a href="{{ path('user_addAgent') }}" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Ajouter des Agents</a>
                    </div>
                </div>
            </div>
		</div>
        <div class="table-responsive">
			<table class="table table-striped table-hover text-center">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom et pr√©noms</th>
						<th scope="col">Mail</th>
						<th scope="col">Date inscription</th>
						{# <th scope="col">Secteur</th> #}
						{# <th scope="col">Statut</th> #}
						<th scope="col">ACTION</th>
					</tr>
				</thead>
				<tbody>
					{% for coachAgentRelation in coachAgentRelations %}
                    {% set agent = coachAgentRelation.agent %}
                        <tr>
                            <td>{{ agent.id }}</td>
                            <td>{{ agent.fullName }}</td>
                            <td>{{ agent.email }}</td>
                            <td>{{ agent.createdAt|date('d/m/Y') }}</td>
                            {# <td>{{ agent.active }}</td> #}
                            <td >
                                <a href="{{ path('coach_agent_view', {'id': agent.id}) }}" class="btn btn-secondary">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                            </td>
                        </tr>
						
					{% endfor %}

				</tbody>
			</table>
		</div>

		<div class="pagination d-flex justify-content-center">
			{{ knp_pagination_render(coachAgentRelations)}}
		</div>
    </div>
{% endblock %}
