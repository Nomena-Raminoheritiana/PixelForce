         $(document).ready(function () {
            $('#exportBtn').click(function (e){
                let form = $('#addNewCardValidation');
                let page = {{page}};
                let dataType = $(form).find('input[name="typeData"]:checked').val();
                let fileType = $(form).find('input[name="typeFile"]:checked').val();
