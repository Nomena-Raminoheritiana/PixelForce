{% extends 'security/login.html.twig' %}

{% block form %}
    <h5 class="text-center my-4">Inscription</h5>
    {% if error %}
        <div class="alert alert-danger p-3 text-center" role="alert">
            <div class="alert-body">
                {{error}}
            </div>
        </div>
    {% endif %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6 col-12">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.prenom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-12">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.telephone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-12">
                {{ form_row(form.adresse) }}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.codePostal) }}
            </div>
        </div>
        
        <h5 class="mb-4">Information sur la connexion</h5>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.username) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.plainPassword.first) }}
            </div>
            <div class="col-12">
                {{ form_row(form.plainPassword.second) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{form_label(form.captcha)}}
                <div class="captcha_wrapper">
                {{form_widget(form.captcha)}}
                </div>
                {{form_errors(form.captcha)}}
            </div>
        </div>
        <div class="w-100 text-center mt-2">
            <button class="btn btn-primary" type="submit">Enregistrer</button>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block title %}Inscription client{% endblock %}
