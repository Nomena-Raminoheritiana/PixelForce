<!-- Modal -->
<div class="modal fade" id="ModalEditLive{{ live.id }}" tabindex="-1" aria-labelledby="ModalEditLive" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="fa-solid fa-video text-success"></i> Planification Live</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="{{ path('live_planifier') }}" method="post">
                    <div class="row">
                        <div class="col-6">
                            <input type="hidden" name="code"  value="{{ live.code }}" />
                            <div class="mb-3">
                                <input type="datetime-local" placeholder="Date de debut live" class="form-control" value="{{ live.date_debut_live }}" name="dateDebutLive" required />
                            </div>
                            <div class="mb-3">
                                <input type="text" name="theme" placeholder="Ajouter un theme" value="{{ live.theme }}" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <textarea name="description" class="form-control" placeholder="Une petite description concernant la rÃ©union ..." required="false" rows="10">{{ live.description }}</textarea>
                            </div>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">Modifier</button>
                            </div>

                        </div>
                        <div class="col-6">
                            <h6><u>Acteurs</u></h6>
                            {% for agent in agents %}
                                <div class="form-check">
                                    <input class="form-check-input" {{ agent.id in live.userB|split(',') ? 'checked':'' }} name="users[]" type="checkbox" value="{{ agent.id|base64_encode }}" id="agent-{{ agent.id }}">
                                    <label class="form-check-label" for="agent-{{ agent.id }}">
                                        {{ agent.nom }} {{ agent.prenom }}
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
